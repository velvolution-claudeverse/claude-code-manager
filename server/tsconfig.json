{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": [
    "./**/*.ts",
    "../modules/**/*.ts"
  ]
}